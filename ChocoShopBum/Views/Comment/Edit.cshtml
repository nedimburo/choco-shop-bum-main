@model Comment
@{
    ViewData["Title"] = "Edit";
}
<div class="home-holder">
    <a asp-controller="Home" asp-action="Index">
        <img class="home-img" alt="Home" src="~/ikonice/home.png">
    </a>
</div>

<form method="post" asp-action="Edit">
    <input asp-for="CommentID" hidden />
    <h1>Edit Komentar</h1>

    <label asp-for="Content">Komentar:</label>
    <input asp-for="Content" />

    <button type="submit">Edituj komentar</button>
    <a asp-controller="Comment" asp-action="Index">Back</a>
</form>
