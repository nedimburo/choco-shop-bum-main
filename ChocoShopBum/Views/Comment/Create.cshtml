@model Comment
@{
    ViewData["Title"] = "Create";
}
<div class="home-holder">
    <a asp-controller="Home" asp-action="Index">
        <img class="home-img" alt="Home" src="~/ikonice/home.png">
    </a>
</div>

<div id="comment-container">
	<h1>Kreiranje komentara</h1>
	<p>Pohvala? Žalba? Pošaljite je ovdje.</p>
	<form method="post">		

		<label asp-for="Content">Komentar:</label><br />
		<input asp-for="Content" />

		<div id="comment-button-holder">
			<button type="submit">Objavi</button>
			<a asp-controller="Comment" asp-action="Index">Nazad</a>
		</div>
	</form>
</div>

