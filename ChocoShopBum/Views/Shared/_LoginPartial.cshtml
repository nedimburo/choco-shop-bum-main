@using Microsoft.AspNetCore.Identity
@using ChocoShopBum.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a asp-controller="Comment" asp-action="Index">FORUM</a>
    <a asp-controller="Role" asp-action="Index">ADMIN</a>
    <a asp-controller="UserDetails" asp-action="Index">MOJ PROFIL</a>
    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="sidenav-item">LOGOUT</button>
    </form>
}
else
{
    <a href="/Identity/Account/Login">LOGIN</a>
    <a href="/Identity/Account/Register">REGISTRACIJA</a>
}
