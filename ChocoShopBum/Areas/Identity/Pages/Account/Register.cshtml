@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="home-holder shadows">
    <a asp-controller="Home" asp-action="Index">
        <img class="full-scale-img" alt="Home" src="~/ikonice/home.png">
    </a>
</div>

<div id="register-holder" class="container-style shadows">
    <h1 class="center">REGISTRACIJA</h1>
    <p class="p-subheader underlined">Napravite svoj korisnički račun.</p>
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-global">

        <label asp-for="Input.Email">E-Mail:</label>
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" /><br />
        <span asp-validation-for="Input.Email" class="warning-text-validation"></span><br />

        <label asp-for="Input.Password">Šifra:</label>
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" /><br />
        <span asp-validation-for="Input.Password" class="warning-text-validation"></span><br />

        <label asp-for="Input.ConfirmPassword">Potvrdite šifru:</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" /><br />
        <span asp-validation-for="Input.ConfirmPassword" class="warning-text-validation"></span><br />

        <label asp-for="Input.FirstName">Ime:</label>
        <input asp-for="Input.FirstName" class="form-control" autocomplete="first-name" aria-required="true" /><br />
        <span asp-validation-for="Input.FirstName" class="warning-text-validation"></span><br />

        <label asp-for="Input.LastName">Prezime:</label>
        <input asp-for="Input.LastName" class="form-control" autocomplete="last-name" aria-required="true" /><br />
        <span asp-validation-for="Input.LastName" class="warning-text-validation"></span><br />

        <label>Spol:</label>
        <select asp-for="Input.Gender" class="form-control">
            <option value=0 selected="selected">Muški</option>
            <option value=1>Ženski</option>
        </select><br />

        <button id="register-button" class="control-button" type="submit">Registruj se</button>
    </form>
    <p class="info-login-register">Imate korisnički račun?</p>
    <div class="center">
        <a class="redirect-login-register" href="/Identity/Account/Login">PRIJAVI SE</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
